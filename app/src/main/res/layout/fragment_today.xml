<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loginPageBackgroundColor"
        tools:context=".ui.today.TodayFragment"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/amadeuslogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="132dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <!-- Snippet from "Add text fields" section goes here. -->

            <!-- Snippet from "Add buttons" section goes here. -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/bnjour"
                android:text="Bonjour dans notre application "
                android:textAllCaps="true"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/utilisateur_acceuil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#ce1eff"
                android:text="utilisateur"
                android:textAllCaps="true"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:text="votre email est : "
                android:textAllCaps="true"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/emailacceuil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#ce1eff"
                android:text="email"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageacceuil"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/md_white_1000"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="pour modifier ces information "
                android:textAllCaps="true"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnsettingacceuil"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:textSize="11dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"

                android:layout_marginTop="1dp"
                android:text="SETTING" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/contactacceuil"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:layout_gravity="center_horizontal"


                android:text="contact" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btngroupeacceuil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"

                android:layout_marginTop="1dp"
                android:text="Groupe" />

        </LinearLayout>
    </ScrollView>

