<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_url"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_sync_black_24dp" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="#8014c4"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6" />

        <TextView
            android:id="@+id/derniermessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dernier message"
            android:textColor="@color/md_black_1000"
            android:textSize="15sp" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        android:id="@+id/online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hdr_strong_red_24dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        android:id="@+id/trashcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_24dp" />


</LinearLayout>