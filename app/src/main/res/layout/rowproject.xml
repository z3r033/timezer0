<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_url"
        android:layout_width="69dp"
        android:layout_height="match_parent"
        android:src="@drawable/time" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/projectname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nom project"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"
            android:textColor="#8014c4" />

        <TextView
            android:id="@+id/usercreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="created by"
            android:textColor="@color/md_black_1000"
            android:textSize="15sp" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/trashcontact"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_delete_black_24dp"
        android:visibility="invisible" />
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addusersproject2"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:textSize="11dp"
        android:gravity="center"


        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:text="add Users" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/projectuserin"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:textSize="11dp"
        android:gravity="center"


        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:text="users deja ajouter" />
    </LinearLayout>

</LinearLayout>